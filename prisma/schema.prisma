generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vote {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  createdBy          String
  voucherUsernames   String[] @default([]) // List of all users who vouched
  upvoterUsernames   String[] @default([])
  downvoterUsernames String[] @default([])
  twitterUsername    String
  status             String   @default("pending")
  messageId          BigInt
  chatId             BigInt
  description        String? @db.Text

  @@unique([messageId, chatId])
}

model Settings {
  id              Int      @id @default(autoincrement())
  requiredUpvotes Int      @default(15)
  requiredDownvotes Int    @default(3)
  updatedAt       DateTime @updatedAt
}

model Feedback {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  targetUsername     String
  feedback           String[] @default([])
  submittedBy        String[] @default([])
  upvoterUsernames   String[] @default([])
  downvoterUsernames String[] @default([])
  messageId          BigInt?
  chatId             BigInt?
  
  @@unique([messageId, chatId])
}
